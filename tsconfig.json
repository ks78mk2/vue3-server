{
  "compilerOptions": {
        "module": "commonJs",
        "resolveJsonModule": true, 
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["*"]
        }
    },
  "include": [
    "src/**/*"
  ]
}